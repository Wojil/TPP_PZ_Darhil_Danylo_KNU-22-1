@{
    ViewData["Title"] = "Вхід до системи";
}
<style>
    .tbody {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 60vh;
    }

    .container {
        text-align: center;
    }

    .button-container {
        margin-top: 10px;
    }

    .card-body {
        text-align: left;
    }

    #input-count {
        text-align: center;
    }

</style>
@if (Model != null)
{
    <div class="tbody ">
        <b style="font-size: 20px;">@Model</b>
    </div>
}
else
{
<div class="text-center">
    <h1 class="page-title">Авторізація</h1>
</div>
<div class="container mb-3">
        <form method="post" action="@Url.Action("SetRole","Authorization")">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="form-group">
                        <label for="login">Логін:</label>
                        <input type="text" id="loginid" name="login" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="password"> Пароль:</label>
                        <input type="text" id="passwordid" name="password" class="form-control" required />
                    </div>
                </div>
                <div class="form-group" style="text-align:center; display:flex; justify-content:center; margin-bottom: 10px;">
                    <button type="submit" class="btn btn-primary" style=" width:300px;">Авторизуватися</button>
                </div>
            </div>
        </form>
</div>
}
<form method="get" style="text-align:center; display:flex; justify-content:center; margin-bottom: 10px;" action="@Url.Action("ManagerMenu","Home")">
    <button type="submit" class="btn btn-warning" style="width: 300px;">Повернутись до меню</button>
</form>
